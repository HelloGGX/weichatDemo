/* pages/book-detail/book-detail.wxss */
.container {
background-color: #f5f5f5;
}

.container-book {
    padding: 40rpx 0;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    background-color: #ffffff;
    
}
.b-share {

    width: 100%;
    padding: 0 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.b-cover {
width: 200rpx;
height: 300rpx;
box-shadow:0px 4px 10px #C4C4C4;
}
.b-title {
    display: block;
    font-size: 38rpx;
    line-height: 38rpx;
    font-weight: 600;
}
.b-author {
    display: block;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #999999;
}
.container-comment {
    background-color: #ffffff;
    margin-bottom: 20rpx;
    padding: 30rpx;
}
.title {
   font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}
.co-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}
.sub-container {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}

.content {
    text-indent: 58rpx;
    text-align: justify;
    text-justify: inter-ideograph;
    font-size: 28rpx;
    font-weight: 500;
}
.detail-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-bottom: 100rpx;
    font-size: 28rpx;
    color: #666;
}

.vertical {
    display: flex;
    flex-direction: column;
}

.description {
    color: #999;
    margin-right: 30rpx;
}
.ex-tag1 {
    background-color: #fffbdd !important;
}

.ex-tag2 {
    background-color: #eefbff !important;
}