    <image class="classic-img" src="{{img}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
    <image class="tag" src="images/movie@tag.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
    <text class="content" selectable="false" space="false" decode="false">{{content}}</text>
</view>