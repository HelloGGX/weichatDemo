<!-- components/book/index.wxml -->
<view class="container" bind:tap="toDetail">
	<image class="b-cover" src="{{book.image}}" mode="aspectFit|widthFix" />
	<view class="b-info">
		<view class="b-title">{{book.title}}</view>
		<view class="b-author">{{book.author}}</view>
		<view class='foot' wx:if="{{book.fav_nums}}">
			<text class="footer">{{book.fav_nums}}  喜欢</text>
		</view>
	</view>
</view>

